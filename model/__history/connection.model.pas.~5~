unit connection.model;

interface

{$REGION 'Uses'}
uses FireDAC.Stan.Intf, FireDAC.Stan.Option,  FireDAC.Stan.Error, FireDAC.UI.Intf,
     FireDAC.Phys.Intf, FireDAC.Stan.Def, FireDAC.Stan.Pool, FireDAC.Stan.Async,
     FireDAC.Phys, FireDAC.VCLUI.Wait, Data.DB, FireDAC.Comp.Client, System.SysUtils,
     FireDAC.Phys.MSSQL, System.IniFiles;

{$ENDREGION}

type
  TConnection = class
    private
      FConexao: TFDConnection;
      procedure LerConfiguracaoINI;

    public
      constructor Create;
      destructor Destroy; override;
      function GetConexao: TFDConnection;
      function CriarQuery: TFDQuery;
      function CriarDataSource: TDataSource;

  end;

implementation

{ TConnection }

constructor TConnection.Create;
var FDPhysMSSQL: TFDPhysMSSQLDriverLink;
    Ini: TIniFile;
    IniFileName: string;
begin
  inherited Create;
  FDPhysMSSQL := TFDPhysMSSQLDriverLink.Create(nil);
  FConexao := TFDConnection.Create(nil);
  LerConfiguracaoINI();

  {FConexao.Params.DriverID := 'MSSQL';
  FConexao.Params.Database := 'BDTESTE';
  FConexao.Params.UserName := 'SA';
  FConexao.Params.Password := 'info';
  FConexao.Params.Add('ADDRESS=NOTEBOOKALVARO\SQLEXPRESS');}
  FConexao.LoginPrompt := False;
end;

destructor TConnection.Destroy;
begin
  FreeAndNil(FConexao);
  inherited;

end;

procedure TConnection.LerConfiguracaoINI;
var
  Ini: TIniFile;
  IniFileName: string;
begin
  IniFileName := ExtractFilePath(ParamStr(0)) + 'consultaCEP.ini';  // Caminho do arquivo INI
  Ini := TIniFile.Create(IniFileName);
  try
    FConexao.Params.DriverID := Ini.ReadString('DatabaseConfig', 'DriverID', 'MSSQL');
    FConexao.Params.Database := Ini.ReadString('DatabaseConfig', 'Database', 'BDTESTE');
    FConexao.Params.UserName := Ini.ReadString('DatabaseConfig', 'UserName', 'SA');
    FConexao.Params.Password := Ini.ReadString('DatabaseConfig', 'Password', 'info');
    FConexao.Params.Add('ADDRESS=' + Ini.ReadString('DatabaseConfig', 'Address', 'NOTEBOOKALVARO\SQLEXPRESS'));
  finally
    Ini.Free;
  end;

end;

function TConnection.GetConexao: TFDConnection;
begin
  Result := FConexao;
end;

function TConnection.CriarQuery: TFDQuery;
var Query: TFDQuery;
begin
  Query := TFDQuery.Create(nil);
  Query.Connection := FConexao;

  Result := Query;
end;

function TConnection.CriarDataSource: TDataSource;
var DataSource: TDataSource;
begin
  DataSource := TDataSource.Create(nil);

  Result := DataSource;
end;


end.
